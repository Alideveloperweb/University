@using University_Common.Enum
@using University_Web.ViewModel.EmployeeViewModel
@model CreateEmployeeItem
@{
    ViewData["Title"] = "ثبت کارمند جدید";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-lg-3">
    <div class="iq-card">
        <div class="iq-card-header d-flex justify-content-between">
            <div class="iq-header-title">
                <h4 class="card-title">افزودن کارمند</h4>
            </div>
        </div>
        <div class="iq-card-body">
            <form>
                <div class="form-group">
                    <div class="add-img-user profile-img-edit" style="border-radius: 50%;-webkit-border-radius: 0;">
                        <img class="profile-pic img-fluid"
                            src="data:image/jpeg;base64,"
                            alt="profile-pic">
                        <div class="p-image">
                            <a href="javascript:void();" class="upload-button btn iq-bg-primary">آپلود عکس </a>
                            <input class="file-upload" type="file" accept="image/*">
                        </div>
                    </div>
                    <div class="img-extension mt-3">
                        <div class="d-inline-block align-items-center">
                            <span>Only</span>
                            <a href="javascript:void();">.jpg</a>
                            <a href="javascript:void();">.png</a>
                            <a href="javascript:void();">.jpeg</a>
                            <span>allowed</span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="EmployeeNumber">شماره پرسنلی :</label>
                    <input type="text" class="form-control" asp-for="EmployeeNumber" placeholder="1234">
                    <span asp-validation-for="EmployeeNumber"></span>
                </div>

                <div class="form-group">
                    <label>سمت شغلی :</label>
                    <select class="form-control" id="selectuserrole">
                        <option>یک سمت را انتخاب کنید</option>
                        <option>Web Designer</option>
                        <option>Web Developer</option>
                        <option>Tester</option>
                        <option>Php Developer</option>
                        <option>Ios Developer </option>
                    </select>
                </div>
                <div class="form-group">
                    <label>دپارتمان :</label>
                    <select class="form-control" id="selectuserrole">
                        <option>یک دپارتمان را انتخاب کنید</option>
                        <option>Web Designer</option>
                        <option>Web Developer</option>
                        <option>Tester</option>
                        <option>Php Developer</option>
                        <option>Ios Developer </option>
                    </select>
                </div>
                <div class="form-group">
                    <label>مهارت ها :</label>
                    <select class="form-control" id="selectuserrole">
                        <option>Select</option>
                        <option>Web Designer</option>
                        <option>Web Developer</option>
                        <option>Tester</option>
                        <option>Php Developer</option>
                        <option>Ios Developer </option>
                    </select>
                </div>
                <div class="form-group">
                    <label>گواهینامه ها و مدارک حرفه ای</label>
                    <select class="form-control" id="selectuserrole">
                        <option>Select</option>
                        <option>Web Designer</option>
                        <option>Web Developer</option>
                        <option>Tester</option>
                        <option>Php Developer</option>
                        <option>Ios Developer </option>
                    </select>
                </div>
                <div class="form-group">
                    <label>پروژه های اخیر</label>
                    <select class="form-control" id="selectuserrole">
                        <option>Select</option>
                        <option>Web Designer</option>
                        <option>Web Developer</option>
                        <option>Tester</option>
                        <option>Php Developer</option>
                        <option>Ios Developer </option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="furl">تاریخ شروع همکاری :</label>
                    <input type="text" class="form-control" id="furl" placeholder="1403/03/03">
                </div>
                <div class="form-group">
                    <label for="turl">حقوق :</label>
                    <input type="text" class="form-control" id="turl" placeholder="1234">
                </div>
                <div class="form-group">
                    <label for="instaurl">وضعیت شغلی :</label>
                    <input type="text" class="form-control" id="instaurl" placeholder="فعال / غیر فعال ">
                </div>
                <div class="form-group">
                    <label for="lurl">ساعت کاری هفتگی :</label>
                    <input type="text" class="form-control" id="lurl" placeholder="8 ساعت">
                </div>
                <div class="form-group">
                    <label for="lurl">مرخصی باقی مانده :</label>
                    <input type="text" class="form-control" id="lurl" placeholder="8">
                </div>
                <div class="form-group">
                    <label for="lurl">مسئول مستقیم :</label>
                    <input type="text" class="form-control" id="lurl" placeholder="احمد حسینی">
                </div>
                <div class="form-group">
                    <label for="lurl">ارزیابی عملکرد :</label>
                    <input type="text" class="form-control" id="lurl" placeholder="خوب">
                </div>
            </form>
        </div>
    </div>
</div>
<div class="col-lg-9">
    <div class="iq-card">
        <div class="iq-card-header d-flex justify-content-between">
            <div class="iq-header-title">
                <h4 class="card-title">اطلاعات شخصی کارمند</h4>
            </div>
        </div>
        <div class="iq-card-body">
            <div class="new-user-info">
                <form>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="fname">نام :</label>
                            <input type="text" class="form-control" id="fname" placeholder="علی">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="lname">نام خانوادگی :</label>
                            <input type="text" class="form-control" id="lname" placeholder="محمدی">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="add1">کد ملی :</label>
                            <input type="text" class="form-control" id="add1" placeholder="0552685978">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="add2">موبایل:</label>
                            <input type="text" class="form-control" id="add2" placeholder="09198564823">
                        </div>
                        <div class="form-group col-md-12">
                            <label for="cname">تلفن منزل:</label>
                            <input type="text" class="form-control" id="cname" placeholder="02184596325">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="email">ایمیل :</label>
                            <input type="email" class="form-control" id="email" placeholder="info@gmail.com">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="email">نام کشور :</label>
                            <input type="email" class="form-control" id="email" placeholder="ایران">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="email">نام شهر :</label>
                            <input type="email" class="form-control" id="email" placeholder="تهران">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="email">آدرس :</label>
                            <textarea type="" class="form-control" id="email"
                                placeholder="لطفا آدرس کامل خود را وارد نمایید"></textarea>
                        </div>
                        <div class="form-group col-sm-12">
                            <label>آخرین مدرک تحصیلی:</label>
                            <select class="form-control" id="selectcountry">
                                <option>یک مورد راانتخاب کنید</option>
                                <option>لیسانس</option>
                                <option>فوق ایسانس</option>
                                <option>دکترا</option>
                                <option>فوق دکترا</option>

                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="mobno">معدل آخرین مدرک تحصیلی</label>
                            <input type="text" class="form-control" id="mobno" placeholder="17.65">
                        </div>
                        <div class="form-group col-sm-12">
                            <label>جنسیت</label>
                            <select class="form-control" id="selectcountry">
                                <option>یک مورد راانتخاب کنید</option>
                                <option>مرد</option>
                                <option>زن</option>
                            </select>
                        </div>
                        <div class="form-group col-sm-12">
                            <label>وضعیت تاهل</label>
                            <select  asp-items="Html.GetEnumSelectList<Gender>()" asp-for="Gender"  class="form-control"
                                id="selectcountry">
                                <option>یک مورد راانتخاب کنید</option>

                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="pno">شماره ملی همسر (درصورت ماهل بودن)</label>
                            <input type="text" class="form-control" id="pno" placeholder="Pin Code">
                        </div>
                        <div class="form-group col-sm-12">
                            <label>گروه خونی </label>
                            <select class="form-control" id="selectcountry">
                                <option>یک مورد راانتخاب کنید</option>
                                <option>A</option>
                                <option>A+</option>
                                <option>B</option>
                                <option>B+</option>
                                <option>AB</option>
                                <option>AB+</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="pno">سابقه بیماری :</label>
                        <input type="text" class="form-control" id="pno" placeholder="">
                    </div>
                    <hr>
                    <h5 class="mb-3">امنیت</h5>
                    <div class="row">
                        <div class="form-group col-md-12">
                            <label for="uname">نام کاربری :</label>
                            <input type="text" class="form-control" id="uname" placeholder="User Name">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="pass">کلمه عبور:</label>
                            <input type="password" class="form-control" id="pass" placeholder="کلمه عبور ">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="rpass">تکرار کلمه عبور :</label>
                            <input type="password" class="form-control" id="rpass" placeholder="تکرار کامه عبور">
                        </div>
                    </div>
                    <div class="checkbox">
                        <label><input class="mr-2" type="checkbox">Enable Two-Factor-Authentication</label>
                    </div>
                    <button type="submit" class="btn btn-primary">ثبت اطلاعات</button>
                </form>
            </div>
        </div>
    </div>
</div>
 