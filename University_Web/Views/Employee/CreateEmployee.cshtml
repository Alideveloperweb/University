@using University_Common.Enum
@using University_Web.ViewModel.EmployeeViewModel
@model CreateEmployeeItem
@{
    ViewData["Title"] = "ثبت کارمند جدید";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="iq-card">
    <div class="iq-card-header d-flex justify-content-between">
        <div class="iq-header-title">
            <h4 class="card-title">ثبت اطلاعات کارمند جدید</h4>
        </div>
    </div>
    <div class="iq-card-body">
        <p>دیر این فرم تمام اطلاعات یک کارمند ثبت میشود</p>

        <form asp-controller="Employee" asp-action="CreateEmployee" method="post" enctype="multipart/form-data">
            <div class="row">

                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Username"></label>
                        <input asp-for="Username" type="text" class="form-control" required="required">
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="FirstName"></label>
                        <input asp-for="FirstName" type="text" class="form-control" required="required">
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="LastName"></label>
                        <input asp-for="LastName" type="text" class="form-control">
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="NationalCode"></label>
                        <input asp-for="NationalCode" type="text" class="form-control">
                    </div>
                </div>

                <div class="col-md-">
                    <div class="form-group">
                        <label asp-for="Gender"></label>
                        <div class="form-check">
                            @{
                                var genderEnumValues = Enum.GetValues(typeof(Gender)).Cast<Gender>();
                                foreach (var gender in genderEnumValues)
                                {
                                    <div class="custom-control custom-radio custom-control-inline" style="float: right;">
                                        <input type="radio" asp-for="Gender" value="@gender" class="custom-control-input" id="@gender" />
                                        <label class="custom-control-label" for="@gender">@gender</label>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>


                <div class="col-md-">
                    <div class="form-group">
                        <label asp-for="MaritalStatus"></label>
                        <div class="form-check">
                            @{
                                var maritalStatusValue = Enum.GetValues(typeof(MaritalStatus)).Cast<MaritalStatus>();
                                foreach (var maritalStatus in maritalStatusValue)
                                {
                                    <div class="custom-control custom-radio custom-control-inline" style="float: right;">
                                        <input type="radio" asp-for="MaritalStatus" value="@maritalStatus" class="custom-control-input" id="@maritalStatus" />
                                        <label class="custom-control-label" for="@maritalStatus">@maritalStatus</label>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="DateOfBirth"></label>
                        <input asp-for="DateOfBirth" type="date" class="form-control">
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="SpouseNationalID "></label>
                        <input asp-for="SpouseNationalID " type="text" class="form-control">
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="MedicalHistory "></label>
                        <input asp-for="MedicalHistory " type="text" class="form-control">
                    </div>
                </div>

                <div class="col-md-12">

                    <div class="form-group">
                        <div class="add-img-user profile-img-edit1">
                            <img class="profile-pic img-fluid" src="data:image/jpeg;base64," alt="profile-pic">
                            <div class="p-image" style="float: left;margin-left: 20px;">
                                <a href="javascript:void();" class="upload-button btn iq-bg-primary">آپلود عکس </a>
                                <input class="file-upload" asp-for="ImageName" type="file" name="ImageName" accept="image/*">
                            </div>
                        </div>
                        <div class="img-extension mt-3" style="float: right;">
                            <div class="d-inline-block align-items-center">
                                <span>Only</span>
                                <a href="javascript:void();">.jpg</a>
                                <a href="javascript:void();">.png</a>
                                <a href="javascript:void();">.jpeg</a>
                                <span>allowed</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Mobile"></label>
                        <input asp-for="Mobile" type="text" class="form-control">
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Homephone"></label>
                        <input asp-for="Homephone" type="text" class="form-control">
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" type="text" class="form-control">
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="EmergencyContactNumber"></label>
                        <input asp-for="EmergencyContactNumber" type="text" class="form-control">
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="CountryName"></label>
                        <input asp-for="CountryName" type="text" class="form-control" />
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="CityName "></label>
                        <input asp-for="CityName " type="text" class="form-control"></input>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Address"></label>
                        <textarea asp-for="Address" rows="3" class="form-control"></textarea>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="LastEducationalCertificate"></label>
                        <input asp-for="LastEducationalCertificate" type="text" class="form-control" required="required">
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="GPAOfThelastDegree"></label>
                        <input asp-for="GPAOfThelastDegree" type="text" class="form-control" required="required">
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <div class="form-check">
                            <label asp-for="BloodType"></label>
                            <div class="custom-control custom-radio custom-control-inline w-100">
                                <select asp-items="Html.GetEnumSelectList<BloodType>()"
                                        asp-for="BloodType" class="form-control w-100">
                                    <option>انتخاب کنید</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="EmployeeNumber"></label>
                        <input asp-for="EmployeeNumber" type="text" class="form-control" required="required">
                    </div>
                </div>

                @* <div class="col-md-12">
                <div class="form-group">
                <label asp-for="JobTitle"></label>
                <input asp-for="JobTitle" type="text" class="form-control" required="required">
                </div>
                </div> *@

                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="HireDate"></label>
                        <input asp-for="HireDate" type="date" class="form-control" required="required">
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Salary"></label>
                        <input asp-for="Salary" type="text" class="form-control" required="required">
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="DepartmentId"></label>
                        <select asp-for="DepartmentId" class="form-control">
                            <option value="">انتخاب کنید</option>
                            @foreach (var department in ViewBag.Departments)
                            {
                                <option value="@department.Value">@department.Text</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="JobId"></label>
                        <select asp-for="JobId" class="form-control">
                            <option value="">انتخاب کنید</option>
                            @foreach (var position in ViewBag.Position)
                            {
                                <option value="@position.Value">@position.Text</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label>مهارت ها</label>
                        <select class="js-example-basic-multiple" name="states[]" multiple="multiple">
                            <option value="">حد اقل یک مهارت را انتخاب کنید</option>
                            @foreach (var skills in ViewBag.Skills)
                            {
                                <option value="@skills.Value">@skills.Text</option>
                            }

                        </select>
                    </div>
                </div>


                <div class="col-md-12">
                    <div class="form-group">
                        <label>پروژه ها</label>
                        <select class="js-example-basic-multiple" name="states[]" multiple="multiple">
                            <option value="">حد اقل یک پروژه را انتخاب کنید</option>
                            @foreach (var recentProjects in ViewBag.RecentProjects)
                            {
                                <option value="@recentProjects.Value">@recentProjects.Text</option>
                            }

                        </select>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label>مدارک </label>
                        <select class="js-example-basic-multiple" name="states[]" multiple="multiple">
                            <option value="">حد اقل یک مدرک را انتخاب کنید</option>
                            @foreach (var certifications in ViewBag.Certifications)
                            {
                                <option value="@certifications.Value">@certifications.Text</option>
                            }

                        </select>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="IsActive"></label>
                        <input asp-for="IsActive" type="checkbox" class="form-control" required="required">
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="RemainingLeaveDays"></label>
                        <input asp-for="RemainingLeaveDays" type="text" class="form-control" required="required">
                    </div>
                </div>

                @* <div class="col-md-12">
                <div class="form-group">
                <label asp-for="JobTitle"></label>
                <input asp-for="JobTitle" type="text" class="form-control" required="required">
                </div>
                </div> *@

                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="WeeklyWorkingHours"></label>
                        <input asp-for="WeeklyWorkingHours" type="text" class="form-control" required="required">
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Supervisor"></label>
                        <input asp-for="Supervisor" type="text" class="form-control" required="required">
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="PerformanceReview"></label>
                        <input asp-for="PerformanceReview" type="text" class="form-control" required="required">
                    </div>
                </div>


                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" type="text" class="form-control" required="required">
                    </div>
                </div>



                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="RePassword"></label>
                        <input asp-for="RePassword" type="text" class="form-control" required="required">
                    </div>
                </div>

                @*                 <div class="col-md-12">
                <div class="form-group">
                <label for="panno">Pan No: *</label>
                <input type="text" class="form-control" id="panno" name="panno"
                placeholder="Pan No.">
                </div>
                </div>
                <div class="col-md-12">
                <div class="form-group">
                <label for="accno">Account No: *</label>
                <input type="text" class="form-control" id="accno" name="accno"
                placeholder="Account No.">
                </div>
                </div>
                <div class="col-md-12">
                <div class="form-group">
                <label for="holname">Account Holder Name: *</label>
                <input type="text" class="form-control" id="holname" name="accname"
                placeholder="Account Holder Name.">
                </div>
                </div>
                <div class="col-md-12">
                <div class="form-group">
                <label for="ifsc">IFSC Code: *</label>
                <input type="text" class="form-control" id="ifsc" name="ifsc"
                placeholder="IFSC Code.">
                </div>
                </div> *@


                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary">ثبت</button>
                    <a href="/Employee/Indx" class="btn iq-bg-danger">لغو</a>
                </div>

            </div>
        </form>
    </div>
</div>

@section script
{

    <script>
        $(document).ready(function () {
            $('.js-example-basic-multiple').select2();
        });
    </script>
}
